{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": "standard-with-typescript",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"semi": ["error", "always"],
		"@typescript-eslint/semi": "off",
		"indent": ["error", "tab"],
		"@typescript-eslint/indent": "off",
		"no-tabs": "off",
		"space-before-function-paren": ["error", "never"],
		"@typescript-eslint/space-before-function-paren": "off"
	}
}
